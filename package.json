{
  "name": "botmyguy",
  "version": "0.0.6-alpha",
  "description": "A Twitch Chat Bot with Stream Games, Commands and More!",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron  .",
    "update-dep": "ncu -u -a --packageFile package.json",
    "pack": "electron-builder --dir",
    "dist-all": "electron-builder -l -m -w",
    "dist-lin": "electron-builder -l",
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w",
    "dist-all-p": "electron-builder -l -m -w -p always",
    "dist-lin-win-p": "electron-builder -l -w -p always",
    "dist-lin-p": "electron-builder -l -p always",
    "dist-mac-p": "electron-builder -m -p always",
    "dist-win-p": "electron-builder -w -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeDigital/botmyguy.git"
  },
  "author": "CodeDigital",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeDigital/botmyguy/issues"
  },
  "homepage": "https://github.com/CodeDigital/botmyguy",
  "dependencies": {
    "chart.js": "^2.8.0",
    "discord.js": "^11.5.1",
    "dotenv": "^8.1.0",
    "electron-updater": "^4.1.2",
    "grunt": "^1.0.4",
    "irc-upd": "^0.10.0",
    "jquery": "^3.5.0",
    "jsonwebtoken": "^8.5.1",
    "material-icons": "^0.3.1",
    "materialize-css": "^1.0.0",
    "p5": "^0.9.0",
    "request": "^2.88.0",
    "twitch-js": "^1.2.17"
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "appId": "com.github.codedigital.botmyguy",
    "publish": {
      "provider": "github",
      "repo": "botmyguy",
      "owner": "CodeDigital",
      "private": false
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        },
        {
          "target": "portable"
        }
      ],
      "publisherName": "CodeDigital",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "packElevateHelper": true,
      "allowElevation": true
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "default"
        },
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "category": "game",
      "target": [
        {
          "target": "snap"
        },
        {
          "target": "zip"
        }
      ],
      "icon": "build/icon.png"
    },
    "asar": true,
    "asarUnpack": [
      "./database/*",
      "./database/events/*"
    ]
  }
}
