{
  "name": "botmyguy",
  "version": "0.0.2-pre-alpha",
  "description": "A Twitch Chat Bot with Stream Games, Commands and More!",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron  .",
    "pack": "electron-builder --dir",
    "dist-all": "electron-builder -l -m -w",
    "dist-lin": "electron-builder -l",
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w",
    "dist-all-p": "electron-builder -l -m -w -p onTagOrDraft",
    "dist-lin-win-p": "electron-builder -l -w -p onTagOrDraft",
    "dist-lin-p": "electron-builder -l -p onTagOrDraft",
    "dist-mac-p": "electron-builder -m -p onTagOrDraft",
    "dist-win-p": "electron-builder -w -p onTagOrDraft"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeDigital/botmyguy.git"
  },
  "author": "Xavier Travers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeDigital/botmyguy/issues"
  },
  "homepage": "https://github.com/CodeDigital/botmyguy#readme",
  "dependencies": {
    "dotenv": "^5.0.1",
    "electron-updater": "^2.23.3",
    "grunt": "^1.0.3",
    "irc-upd": "^0.9.0",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.3.0",
    "material-icons": "^0.2.3",
    "materialize-css": "^1.0.0-rc.2",
    "p5": "^0.6.1",
    "request": "^2.87.0",
    "twitch-js": "^1.2.12",
    "ws": "^5.2.1"
  },
  "devDependencies": {
    "electron": "^1.8.7",
    "electron-builder": "^20.19.2",
    "electron-builder-squirrel-windows": "^20.19.0",
    "electron-packager": "^12.1.0"
  },
  "build": {
    "appId": "com.codedigital.botmyguy",
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        },
        {
          "target": "portable"
        }
      ],
      "publisherName": "<Code>Digital",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "default"
        },
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "category": "game",
      "target": [
        {
          "target": "snap"
        },
        {
          "target": "zip"
        }
      ],
      "icon": "build/icon.png"
    },
    "asar": true,
    "asarUnpack": [
      "./database/*",
      "./database/events/*"
    ]
  }
}
